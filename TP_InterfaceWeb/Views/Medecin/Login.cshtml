@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
    ViewBag.Title = "Bienvenue";
}

@model List<TP_InterfaceWeb.Models.NewAccount>

@using (Html.BeginForm("Login", "Medecin", FormMethod.Post))
{
     
     <br />
    @foreach (TP_InterfaceWeb.Models.NewAccount newAccount in @Model)
    {
       if (@Model.IndexOf(newAccount) == @Model.Count - 1) 
       {
        <h3 class="bg-warning">Bienvenue Dr. @newAccount.Nom @newAccount.Prenom !</h3>



        }
    
   
    }
<h1 class="text-success">Connexion réussie !</h1>

     <br />

    
        
    
        
         <h1 class="bg-primary">Menu</h1>
