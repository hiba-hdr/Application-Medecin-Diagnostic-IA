            <label class="form-check-label" asp-for="@Model.HommeCheck">Homme</label>
            <input class="form-check-input" asp-for="@Model.HommeCheck" type="radio" value="@Model.HommeCheck" />
        </div>
   
        <div class="form-check form-check-inline">
            <label class="form-check-label" asp-for="@Model.FemmeCheck">Femme</label>
            <input class="form-check-input" asp-for="@Model.FemmeCheck" type="radio" value="@Model.FemmeCheck" />
        </div>


        </div>

        <br/>

        <div class=input-group>
            <label class="form-label col-sm-2" asp-for="@Model.DernierDiagnostic">Date de naissance</label>
            <div class="col-sm-10">
                <label class="form-label" asp-for="@Model.DernierDiagnostic">@Model.DernierDiagnostic</label>
            </div>
        </div>

        <br />
   

        <div class="mt-2">
        <a class="btn btn-primary" href="~/Medecin/Diagnostic">Quitter</a>
        </div>



