@using System.Security.Claims;
@{
    var userId = User.FindFirst(ClaimTypes.Name);
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
    ViewBag.Title = "Informations du patients";
    
}


@model TP_InterfaceWeb.Models.AjoutPatient

@using (Html.BeginForm("Infopatient", "Medecin", FormMethod.Post))
{

    <body>



    <h2 class="bg-success">Informations</h2>
   
    <br />
    

    </body>
    <br/>
    @ViewBag.error  
         <div class=input-group>
       

            <label class="form-label col-sm-2" asp-for="UserName">Nom d'utilisateur</label>

            <div class="col-sm-10">
                <label class="form-label" asp-for="@Model.UserName">@Model.UserName</label>
            </div>
      
           
        </div>

        <div class=input-group>
            <label class="form-label col-sm-2" asp-for="@Model.Nom">Nom</label>
            <div class="col-sm-10">
                <label class="form-label" asp-for="@Model.Nom">@Model.Nom</label>
            </div>
        
        </div>

        <br/>

        <div class=input-group>
            <label class="form-label col-sm-2" asp-for="@Model.Prenom">Prénom</label>

            <div class="col-sm-10">
                <label class="form-label" asp-for="@Model.Prenom">@Model.Prenom</label>
            </div>
       </div>

        <br/>

        <div class=input-group>
            <label class="form-label col-sm-2" asp-for="@Model.DateNaissance">Date de naissance</label>
            <div class="col-sm-10">
                <label class="form-label" asp-for="@Model.DateNaissance">@Model.DateNaissance</label>
            </div>
        </div>

        <br/>
        <div class = input-group>
            <label class="form-label col-sm-2" asp-for="@Model.Ville">Ville</label>
        <div class="col-sm-10">
        <select class="form-select" asp-for="@Model.Ville">
            <option selected disabled value="">@Model.Ville</option>
            
        </select>
        </div>

        </div>
        <br/>

        <div class = input-group>
            <label class="form-label col-sm-2" asp-for="@Model.HommeCheck">Je suis</label>
